<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frmSach">

    <TableLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:collapseColumns=""
        android:shrinkColumns="*"
        android:stretchColumns="*"
        tools:ignore="MissingConstraints"
        android:background="#ccffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin Sách"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="6"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã sách"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="2"/>

            <EditText
                android:id="@+id/maS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:gravity="center"
                android:hint="nhap ma"
                android:textColor="@color/black"
                tools:ignore="TouchTargetSizeCheck" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sách"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="2"/>

            <EditText
                android:id="@+id/tenS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:gravity="center"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số trang"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="2"/>

            <EditText
                android:id="@+id/strang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:gravity="center"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã thể loại"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="2"/>

            <Spinner
                android:id="@+id/matl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:gravity="center"
                android:hint="nhap ma"
                android:textColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:paddingTop="10dp">
            <Button
                android:id="@+id/themS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THÊM"
                android:textColor="@color/black"
                android:layout_span="2"/>
            <Button
                android:id="@+id/suaS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SỬA"
                android:textColor="@color/black"
                android:layout_span="2"/>
            <Button
                android:id="@+id/xoaS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XÓA"
                android:textColor="@color/black"
                android:layout_span="2"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <Button
                android:id="@+id/cancleS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QUAY VỀ TRANG CHỦ"
                android:textColor="@color/black"
                android:layout_span="6"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:paddingTop="10dp">
            <TextView
                android:text="HIỂN THỊ "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="6"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:paddingTop="10dp">
            <ListView
                android:id="@+id/hthiS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_span="6"
                android:textSize="20dp"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>