<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nhapTheloai">
    <TableLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:collapseColumns=""
        android:shrinkColumns="*"
        android:stretchColumns="*"
        tools:ignore="MissingConstraints"
        android:background="#ccffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THỂ LOẠI SÁCH"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_span="6"></TextView>
    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mã thể loại"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="2"></TextView>
            <EditText
                android:id="@+id/matl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="4"></EditText>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên thể loại"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="2"></TextView>
            <EditText
                android:id="@+id/tentl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="4"></EditText>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <Button
                android:id="@+id/themtl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THÊM"
                android:textColor="@color/black"
                android:layout_span="2"></Button>
            <Button
                android:id="@+id/suatl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SỬA"
                android:textColor="@color/black"
                android:layout_span="2"></Button>
            <Button
                android:id="@+id/xoatl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XÓA"
                android:textColor="@color/black"
                android:layout_span="2"></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUAY VỀ TRANG CHỦ"
            android:textColor="@color/black"
            android:layout_span="6"></Button>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:paddingTop="10dp"
            >
            <TextView
                android:text="HIỂN THỊ "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_span="6"></TextView>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:paddingTop="10dp"
            >
            <ListView
                android:id="@+id/hthi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_span="6"
                android:textSize="20dp"></ListView>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>